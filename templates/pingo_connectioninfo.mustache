{{#js}}
{{/js}}
<div class="pingo_connectioninfo">
    <div class="d-flex justify-content-between">
        <div><span class="font-weight-bold">{{#str}}remoteserver, mod_pingo{{/str}}:</span> <a href="{{remoteserver}}" target="_blank">{{remoteserver}}</a></div>

        {{#activeconnection}}
            <div class="bg-success text-white text-center p-2">{{#str}}connectionactive, mod_pingo{{/str}}!</div>
        {{/activeconnection}}
        {{^activeconnection}}
            <div class="bg-warning text-white text-center p-2">{{#str}}noconnection, mod_pingo{{/str}}</div>
        {{/activeconnection}}

        {{#activeconnection}}
            <div class="actionbuttons">
                <a class="btn btn-primary" href="view.php?id={{cmid}}&closeconnection=1&sesskey={{sesskey}}"> {{#str}}closeconnection, mod_pingo{{/str}}</a>
            </div>
        {{/activeconnection}}
    </div>
</div>