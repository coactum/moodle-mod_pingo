    @template pingo/pingo_sessionsoverview

    Template for the overview over the sessions.

    Example context (json):
    {
    }
}}

{{#js}}
{{/js}}
<div class="d-flex justify-content-center">
    <div class="pingo_sessionsoverview mt-5">
        <h3>{{#str}}sessionsoverview, mod_pingo{{/str}}</h3>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">
                        {{#str}}name{{/str}}
                    </th>
                    <th scope="col">
                        {{#str}}description{{/str}}
                    </th>
                    <th scope="col">
                        {{#str}}show{{/str}}
                    </th>
                </tr>
            </thead>
            <tbody>
                {{#sessions}}
                    <tr>
                        <td>{{name}} <a href="view.php?id={{cmid}}&session={{token}}" title="{{#str}}show{{/str}}">#{{token}}</a></td>
                        <td>{{description}}</td>
                        <td><a href="view.php?id={{cmid}}&session={{id}}" title="{{#str}}show{{/str}}">{{#str}}show{{/str}}</a></td>
                    </tr>
                {{/sessions}}
                {{^sessions}}
                    <tr><td align="center" colspan="4">{{#str}}nosessionsavailable, mod_pingo{{/str}}</td></tr>
                {{/sessions}}
            </tbody>
        </table>
    </div>
</div>