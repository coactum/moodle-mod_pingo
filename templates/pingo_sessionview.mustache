{{#js}}
{{/js}}
<div class="pingo_sessionview">
    <div class="mt-5">
        <h3>{{#str}}sessionview, mod_pingo{{/str}}</h3>

        {{#session}}
            <h4>{{name}} <a href="">{{token}}</a></h4>
            {{description}}

            <h5 class="mt-3">{{#str}}lastsurvey, mod_pingo{{/str}}</h5>
            {{#latest_survey}}
                <!--
                {{name}}
                <br>
                <strong class="mt-1">{{#str}}participants{{/str}}:</strong> {{#voters}}{{voters}}{{/voters}}{{^voters}}0{{/voters}}
                <br>
                <strong class="mt-1">{{#str}}answers, mod_pingo{{/str}}:</strong>
                {{#options}}
                    <br><span class="badge badge-primary">{{votes}}</span> {{name}}
                {{/options}}
                -->

                <iframe src="{{remoteserver}}/events/{{token}}/surveys/{{latest_survey._id.$oid}}/?auth_token={{authtoken}}&remote_view=true" width="100%" height="300" style="border:1px solid black;"></iframe>

                {{#startsurvey}}
                    {{^activesurvey}}
                        <div class="startsurvey">
                            <a href="#"> {{#str}}continuesurvey, mod_pingo{{/str}}</a>
                            <a href="#"> {{#str}}repeatsurvey, mod_pingo{{/str}}</a>
                        </div>
                    {{/activesurvey}}
                    {{#activesurvey}}
                        <div class="stopsurvey">
                            <a href="#"> {{#str}}stopsurvey, mod_pingo{{/str}}</a>
                        </div>
                    {{/activesurvey}}
                {{/startsurvey}}
            {{/latest_survey}}
            {{^latest_survey}}
                {{#str}}nosurveys, mod_pingo{{/str}}
            {{/latest_survey}}

            <h5 class="mt-3">{{#str}}surveys, mod_pingo{{/str}}</h5>
            {{#surveys}}
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">
                            </th>
                            <th scope="col">
                                {{#str}}name{{/str}}
                            </th>
                            <th scope="col">
                                {{#str}}starttime, mod_pingo{{/str}}
                            </th>
                            <th scope="col">
                                {{#str}}answered, mod_pingo{{/str}}
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#sessions}}
                            <tr>
                                <td>{{name}} <a href="view.php?id={{cmid}}&session={{token}}" title="{{#str}}show{{/str}}">#{{token}}</a></td>
                                <td>{{description}}</td>
                                <td><a href="view.php?id={{cmid}}&session={{id}}" title="{{#str}}show{{/str}}">{{#str}}show{{/str}}</a></td>
                            </tr>
                        {{/sessions}}
                        {{^sessions}}
                            <tr><td align="center" colspan="4">{{#str}}nosessionsavailable, mod_pingo{{/str}}</td></tr>
                        {{/sessions}}
                    </tbody>
                </table>
            {{/surveys}}
            {{^surveys}}
                {{#str}}nosurveys, mod_pingo{{/str}}
            {{/surveys}}
        {{/session}}
        {{^session}}
            {{#str}}errnosession, mod_pingo{{/str}}
        {{/session}}
    </div>
</div>