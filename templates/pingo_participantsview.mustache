{{#js}}
{{/js}}
<div class="d-flex justify-content-center">
    <div class="pingo_participantsview mt-5">
        <h3>{{#str}}surveyinsession, mod_pingo{{/str}}</h3>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">
                        {{#str}}name{{/str}}
                    </th>
                    {{#sessions.0.description}}
                        <th scope="col" class="w-50">
                            {{#str}}description{{/str}}
                        </th>
                    {{/sessions.0.description}}
                    <th scope="col">
                        {{#str}}state, mod_pingo{{/str}}
                    </th>
                    <th scope="col" class="minwidthtable">
                    </th>
                </tr>
            </thead>
            <tbody>
                {{#sessions}}
                    <tr>
                        <td>{{name}} ({{token}})</td>
                        {{#description}}
                            <td>
                                {{description}}
                            </td>
                        {{/description}}
                        <td>
                            {{{surveyendstr}}}
                        </td>
                        <td>
                            <a class="btn btn-primary" href="{{remoteserver}}/{{token}}" title="{{#str}}voteinpingo, mod_pingo{{/str}}" target="_blank">{{#str}}voteinpingo, mod_pingo{{/str}}</a>
                        </td>
                    </tr>
                {{/sessions}}
                {{^sessions}}
                    <tr><td align="center" colspan="4">{{#str}}nosessionsavailable, mod_pingo{{/str}}</td></tr>
                {{/sessions}}
            </tbody>
        </table>
    </div>
</div>