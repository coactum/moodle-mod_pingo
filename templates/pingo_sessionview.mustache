    @template pingo/pingo_sessionview

    Template for the session view.

    Example context (json):
    {
    }
}}

{{#js}}
{{/js}}
<div class="pingo_sessionview">
    <div class="mt-5">
        {{#session}}
            <h3>{{name}} ({{token}})</h3>
            <div class="pb-3">{{description}}</div>

            {{#latest_survey}}

                <iframe src="{{remoteserver}}/events/{{token}}/surveys/{{latest_survey._id.$oid}}/?auth_token={{authtoken}}&remote_view=true" width="100%" height="{{contentheight}}" style="border: none;"></iframe>

                <div class="mb-2"><strong>{{{surveyendstr}}}</strong></div>
                {{#surveyactive}}
                    {{#startsurvey}}{{#stopsurveyform}}
                        {{{stopsurveyform}}}
                    {{/stopsurveyform}}{{/startsurvey}}
                {{/surveyactive}}
            {{/latest_survey}}
            {{^latest_survey}}
                <div><strong>{{#str}}nosurveys, mod_pingo{{/str}}</strong></div>
            {{/latest_survey}}
        {{/session}}
    </div>
</div>